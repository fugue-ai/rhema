{
  "name": "rhema-language-server",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for Rhema (Git-Based Agent Context Protocol)",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "package": "npm run build && npm pack",
    "start": "node dist/server.js"
  },
  "keywords": [
    "rhema",
    "language-server",
    "lsp",
    "yaml",
    "git",
    "ai",
    "context",
    "protocol"
  ],
  "author": "Cory Parent <cory.parent@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fugue-ai/rhema.git"
  },
  "bugs": {
    "url": "https://github.com/fugue-ai/rhema/issues"
  },
  "homepage": "https://github.com/fugue-ai/rhema",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "yaml": "^2.3.4",
    "ajv": "^8.12.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "glob": "^10.3.10",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1"
  },
  "bin": {
    "rhema-language-server": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
} 