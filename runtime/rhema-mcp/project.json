{
  "name": "rhema-mcp-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "runtime/rhema-mcp/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "build:release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build --release",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo check",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "clippy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "fmt:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt --check",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clean",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "run:release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run --release",
        "cwd": "runtime/rhema-mcp"
      }
    },
    "doc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo doc",
        "cwd": "runtime/rhema-mcp"
      }
    }
  },
  "tags": ["type:app", "scope:rust", "scope:mcp", "scope:server"]
}
