# Local environment variables for act execution
# Copy this file to .env.local and customize as needed

# GitHub token for local testing (optional)
# GITHUB_TOKEN=your_github_token_here

# Rust toolchain version
RUST_VERSION=stable

# Enable integration tests
RHEMA_RUN_INTEGRATION_TESTS=1

# Cargo configuration
CARGO_TERM_COLOR=always
RUST_BACKTRACE=1
RUST_LOG=info

# Skip external services for local testing
SKIP_CODECOV=true
SKIP_SECURITY_SCAN=true

# Local development settings
ACT_LOCAL=true 